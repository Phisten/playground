{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "types": [
      "jest",
      "node"
    ],
    // "paths": {
    //   "@@styles/*": [
    //     "styles/*"
    //   ],
    // }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "next-env.d.ts",
    "../../libs/ui/src/**/*.ts",
    "../../libs/ui/src/**/*.tsx",
  ],
  "exclude": [
    "node_modules",
    "jest.config.ts"
  ]
}
